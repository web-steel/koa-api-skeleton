{
  "name": "koa-api-skeleton",
  "version": "2.0.1",
  "description": "REST API skeleton using NodeJS and Koa2, Typescript. TypeORM with class-validator, SQL CRUD. Docker.",
  "main": "dist/index.js",
  "readmeFilename": "README.md",
  "scripts": {
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx src",
    "build": "npm run lint && npm run clean && tsc",
    "clean": "npm run clean:build",
    "clean:build": "rm -rf dist",
    "ci": "npm run lint && npm test",
    "dev": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_ENV=TEST NODE_TEST=true jest",
    "coverage": "NODE_ENV=TEST NODE_TEST=true jest --coverage || true"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:web-steel/koa.api.skeleton.git"
  },
  "homepage": "https://github.com/web-steel/koa.api.skeleton",
  "author": {
    "name": "Vladimir Markov",
    "email": "web.steel89@gmail.com"
  },
  "contributors": [
    {
      "name": "Vladimir Markov",
      "email": "web.steel89@gmail.com"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.1.1",
    "@sentry/node": "^6.14.0",
    "class-validator": "^0.13.1",
    "dotenv": "^16.0.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.1.0",
    "koa-helmet": "^6.1.0",
    "koa-response-time": "^2.1.0",
    "koa-router": "^10.1.1",
    "koa-static": "^5.0.0",
    "mysql": "^2.18.1",
    "node-input-validator": "^4.5.0",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-koa": "^0.0.1",
    "typeorm": "^0.2.38",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.4",
    "@types/koa-compress": "^4.0.3",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa-response-time": "^2.1.1",
    "@types/koa__cors": "^3.0.3",
    "@types/koa__router": "^8.0.9",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "pre-commit": "^1.2.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/coverage/"
    ]
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
